{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main",
  "description": "Capabilities for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:path:default",
    "core:event:default",
    "core:window:default",
    "core:app:default",
    "core:resources:default",
    "core:menu:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "*"
        }
      ]
    },
    "fs:default",
    {
      "identifier": "fs:allow-exists",
      "allow": [{ "path": "*" }]
    },
    "fs:allow-read-text-file",
    "sql:default",
    "sql:allow-execute"
  ]
}
